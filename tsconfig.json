{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@ultimate-monorepo/api": ["./packages/backend/api/src"],
      "@ultimate-monorepo/models": ["./packages/backend/models/src"],
      "@ultimate-monorepo/componets": ["./packages/ui/components/src"]
    }
  },
  "exclude": ["node_modules", "dist", "out"]
}
